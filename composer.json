{
    "name": "macoaure/badge-action",
    "description": "Generate dynamic badges using shields.io API",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Marcos Aurelio",
            "email": "macosaures+github@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "psr/log": "^3.0",
        "symfony/console": "*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.6",
        "monolog/monolog": "^3.9",
        "pestphp/pest": "^3.8",
        "phpunit/php-code-coverage": "^11.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "BadgeGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto"
        ],
        "post-update-cmd": [
            "@auto"
        ],
        "auto": [
            "composer normalize"
        ],
        "test": "pest",
        "test:coverage": "pest --coverage --min=100 --coverage-html coverage"
    }
}
