{
    "name": "your-username/badge-action",
    "description": "Generate dynamic badges using shields.io API",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "symfony/console": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "phpunit/php-code-coverage": "^11.0",
        "mockery/mockery": "^1.6",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "BadgeGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --min=100 --coverage-html coverage"
    },
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
